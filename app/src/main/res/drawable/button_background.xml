<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Sombra -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#aaaaaa" /> <!-- Cor da sombra -->
            <corners android:radius="12dp" /> <!-- Arredondamento da sombra -->
        </shape>
    </item>

    <!-- Botão principal -->
    <item android:top="4dp" android:left="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" /> <!-- Cor de fundo do botão -->
            <corners android:radius="12dp" /> <!-- Arredondamento das bordas -->
            <stroke android:width="2dp" android:color="#cccccc" /> <!-- Borda -->
            <padding
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

</layer-list>
